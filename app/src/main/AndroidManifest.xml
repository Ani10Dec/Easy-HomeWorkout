<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.easy.easyworkout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/DefaultTheme">
        <activity
            android:name=".Activity.WeaklyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarDefaultTheme" />
        <activity
            android:name=".Activity.WorkoutPlanActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarDefaultTheme" />
        <activity
            android:name=".Activity.StartCountDownActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarDefaultTheme" />
        <activity
            android:name=".Activity.HomeScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarDefaultTheme" />
        <activity
            android:name=".Activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>